<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Wiki</h1>

      <form action="/wikis/new" method="post">
        <% if(currentUser.role == 2 || currentUser.role == 1){ %>
          <div class="form-group">
            <label>Private</label>
            <div>
              <input type="radio" id="true" name="private" value="true">
              <label for="true">True</label>
              <input type="radio" id="false" name="private" value="false">
              <label for="false">False</label>
            </div>
          </div>
          <% } %>
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>