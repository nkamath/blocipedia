<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>
  <% include ../static/partials/navbar.ejs %>

  <main class="container">
    <% include ../static/partials/messages.ejs %>
    <h1><%= wiki.title %></h1>
    <% if(currentUser){ %>
    <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
    <% if(currentUser.id==wiki.userId || currentUser.role==1){ %>
    <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <% if(wiki.private){ %>
    <a href="/wikis/<%= wiki.id %>/share" class="btn btn-warning">Share</a>
    <% } %>
    <% } %>
    <% } %>

    <p><%- wiki.body %></p>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>