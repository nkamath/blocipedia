<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>

  <main class="container" style='padding-top: 80px'>

    <% include ../static/partials/messages.ejs %>


    <h1>Welcome to Blocipedia</h1>
    <div class="row">
      <div class="col-md-8">
        
        <form method="POST" action="/users/sign-up">
          <div class="form-group">
            <label>Name:</label>
            <input type="text" name="name" placeholder="Enter Name" class="form-control" />
          </div>
          <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" placeholder="Enter Email" class="form-control" />
            <small class="text-muted" id="emailHelp">Must be a valid email ID.</small>
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="Enter Password" class="form-control" />
            <small class="text-muted" id="passwordHelp">Must be 6 or more characters in length.</small>
          </div>
          <div class="form-group">
            <input type="password" name="password_conf" placeholder="Enter Password confirmation"
              class="form-control" />
          </div><br />
          <input type="submit" value="Sign Up" class="btn btn-primary" />
        </form>
      </div>
    </div>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>